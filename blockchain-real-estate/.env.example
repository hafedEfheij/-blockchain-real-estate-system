# Blockchain Development Environment Configuration
# Copy this file to .env and update the values

# Network Configuration
NETWORK_NAME=localhost
NETWORK_URL=http://127.0.0.1:8545
CHAIN_ID=1337

# Private Keys (For development only - NEVER use in production)
PRIVATE_KEY=your_private_key_here
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Etherscan Configuration (For contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Infura Configuration (For mainnet/testnet deployment)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Alchemy Configuration (Alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Gas Configuration
GAS_PRICE=20000000000
GAS_LIMIT=6000000

# Contract Configuration
INITIAL_VERIFIER_ADDRESS=0x0000000000000000000000000000000000000000

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true

# Test Configuration
RUN_COVERAGE=true
COVERAGE_THRESHOLD=80

# Deployment Configuration
AUTO_VERIFY=false
SAVE_DEPLOYMENTS=true
